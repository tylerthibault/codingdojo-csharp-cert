@model MyViewModel

<div>
    <h1 class="text-center text-4xl">@Model.Category.Name</h1>
</div>
<div class="grid grid-cols-2">
    <div class="text-center">
        <h2 class="text-2xl">Products</h2>
        @foreach (Association ass in Model.Category.AllProducts)
        {
            <p>@ass.Product.Name </p>
        }
    </div>
    <div class="text-center">
        <h2 class="text-2xl">All Products</h2>
        <form asp-action="AssociationCreate" asp-controller="Home" asp-route-origin="categories" method="post">
            <input type="hidden" asp-for="Association.CategoryId" value="@Model.Category.CategoryId">
            <div class="mb-3 flex flex-col gap-3">
                <label asp-for="Association.ProductId"></label>
                <select class="border rounded" asp-for="Association.ProductId">
                    @foreach (Product p in Model.AllProducts)
                    {
                        <option value="@p.ProductId">@p.Name</option>
                    }
                </select>
                <span asp-validation-for="Association.ProductId" class="text-danger"></span>
            </div>
            <button class="border rounded px-3">Submit</button>
        </form>
    </div>
</div>